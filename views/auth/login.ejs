<% layout('layouts/boilerplate') %>
    <%- include('../flash/flash.ejs') %>
    <div class="authentication-container">
    <div class="container-auth">
      <h1 class="heading">Sign In</h1>
      <div class="third-party-login">
        <button
          class="auto-signin google"
          onclick="window.location.href='/auth/google'"
        >
          <span class="Google-auth">
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg"
              class="auto-signin-icon"
              alt="Google logo"
            />
            Sign in with Google
          </span>
        </button>
      </div>
      <div class="divider"></div>
      <!-- auth/login.ejs -->
      <form action="/login" class="details" method="POST">
        <label for="emailOrPhone">Email or Phone:</label>
        <input type="text" id="emailOrPhone" name="emailOrPhone" required />

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required />

        <button type="submit" class="auth-submit">Login</button>
      </form>
      <div class="other-options">
        <a href="/signup" class="create-account">Create an account</a>
        <a href="/forgot" class="forgot-password"
        >Forgot password?</a
      >
        <!-- <a href="/forgot-password" class="forgot-password">Forgot password?</a> -->
      </div>
    </div>
  </div>
    <script>
      function animateButton(button) {
        button.classList.add("button-clicked");
        setTimeout(() => {
          button.classList.remove("button-clicked");
        }, 300); // Adjust the duration to match the transition duration
      }
    </script>
