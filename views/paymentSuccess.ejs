<% layout('layouts/boilerplate') %>

<style>
    .payment-status-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 70vh;
      background-color: #f4f4f4;
      color: #444;
      font-family: 'Roboto', sans-serif;
      padding: 20px;
    }
  
    .payment-status-title {
      font-size: 2.5rem;
      margin-bottom: 20px;
      color: #4CAF50;
      animation: fadeIn 1s ease-in-out;
    }
  
    .payment-status-message {
      font-size: 1.25rem;
      margin-bottom: 30px;
      text-align: center;
      animation: fadeIn 1.5s ease-in-out;
      line-height: 1.5;
      color: #555;
    }
  
    .payment-status-icon {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 30px;
      position: relative;
    }
  
    .payment-status-success {
      animation: pulse 2s infinite;
    }
  
    .payment-status-pending {
      background-color: #FFC107;
      animation: spin 2s linear infinite;
    }
  
    .payment-status-failure {
      background-color: #F44336;
      animation: shake 0.5s infinite;
    }
  
    .payment-status-link {
      text-decoration: none;
      color: white;
      background-color: #007BFF;
      padding: 12px 25px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      animation: fadeIn 2s ease-in-out;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  
    .payment-status-link:hover {
      background-color: #0056b3;
    }
  
    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  
    @keyframes pulse {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.1);
      }
      100% {
        transform: scale(1);
      }
    }
  
    @keyframes spin {
      100% {
        transform: rotate(360deg);
      }
    }
  
    @keyframes shake {
      0%, 100% {
        transform: translateX(0);
      }
      20%, 60% {
        transform: translateX(-10px);
      }
      40%, 80% {
        transform: translateX(10px);
      }
    }
</style>

<div class="payment-status-container">
  <h1 class="payment-status-title">Payment Status</h1>
  <% if (paymentStatus === 'SUCCESS') { %>
  <div class="payment-status-icon payment-status-success">
    <svg id="payment-status-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" enable-background="new 0 0 64 64">
      <path d="M32,2C15.431,2,2,15.432,2,32c0,16.568,13.432,30,30,30c16.568,0,30-13.432,30-30C62,15.432,48.568,2,32,2z M25.025,50
        l-0.02-0.02L24.988,50L11,35.6l7.029-7.164l6.977,7.184l21-21.619L53,21.199L25.025,50z" fill="#43a047"/>
    </svg>
  </div>
  <p class="payment-status-message">Your payment was successful! Thank you for your purchase.</p>
  <% } else if (paymentStatus === 'PENDING') { %>
  <div class="payment-status-icon payment-status-pending">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" fill="none"/>
      <path d="M12 6v6l4 2" stroke="white" stroke-width="2" fill="none"/>
    </svg>
  </div>
  <p class="payment-status-message">Your payment is pending. We will update you once the payment is confirmed.</p>
  <% } else { %>
  <div class="payment-status-icon payment-status-failure">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" fill="none"/>
      <path d="M15 9l-6 6m0-6l6 6" stroke="white" stroke-width="2" fill="none"/>
    </svg>
  </div>
  <p class="payment-status-message">Your payment failed. Please try again or contact support.</p>
  <% } %>
  <a href="/" class="payment-status-link">Go to Home</a>
</div>
