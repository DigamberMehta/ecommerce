<% layout('layouts/boilerplate') %>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #f4f4f4;
    }
   
    .checkout-container {
        display: flex;
        width: 90%;
        margin: 20px auto;
        gap: 20px;
    }

    .checkout-left {
        width: 70%;
    }

    .checkout-right {
        width: 30%;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        max-height: 200px;
    }

    .accordion {
        border-radius: 5px;
        overflow: hidden;
    }

    .accordion-item {
        border-bottom: 1px solid #e0e0e0;
    }

    .accordion-header {
        background-color: #fff;
        border: none;
        outline: none;
        padding: 15px;
        width: 100%;
        text-align: left;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
        border-bottom: 1px solid #ddd;
    }

    .accordion-header:hover,
    .accordion-header.active {
        background-color: #f7f7f7;
        color: #007bff;
    }

    .accordion-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-out, padding 0.3s ease-out;
        padding: 0 15px;
        background-color: #fff;
    }

    .accordion-content.show {
        max-height: 1000px;
        padding: 15px;
    }

    .checkout-left h3 {
        margin-top: 0;
        font-size: 18px;
        color: #333;
    }

    .checkout-left p {
        font-size: 14px;
        line-height: 1.6;
        color: #555;
    }

    .checkout-left .btn {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        margin-top: 10px;
        border-radius: 5px;
        display: inline-block;
        font-size: 14px;
        transition: background-color 0.3s;
    }

    .checkout-left .btn.primary {
        background-color: #28a745;
    }

    .checkout-left .btn:hover {
        opacity: 0.9;
    }

    .checkout-right h2 {
        font-size: 24px;
        margin-top: 0;
        margin-bottom: 10px;
        color: #333;
       
    }

    .checkout-right p {
        font-size: 16px;
        color: #333;
        margin: 10px 0;
    }

    .checkout-right h3 {
        font-size: 20px;
        color: #28a745;
        margin-top: 0;
    }

    .checkout-right .order-summary-item {
        margin-bottom: 10px;
    }

    .checkout-right .savings {
        font-weight: bold;
        color: #ff5722;
    }

    .checkout-right .discount {
        font-style: italic;
        color: #555;
    }
</style>
<body>
    <div class="checkout-container">
        <div class="checkout-left">
            <div class="accordion">
                <div class="accordion-item">
                    <button class="accordion-header active">Select a delivery address</button>
                    <div class="accordion-content show">
                        <h3 class="section-title">Your addresses</h3>
                        <form action="/checkout/confirm" method="POST">
                            <% addresses.forEach(function(address, index) { %>
                                <div class="address">
                                    <input type="radio" name="selectedAddress" id="address-<%= index %>" value="<%= index %>" <%= index === 0 ? 'checked' : '' %>>
                                    <label for="address-<%= index %>">
                                        <%= address.name %><br>
                                        <%= address.houseNumber %> <%= address.street %>, <%= address.city %>, <%= address.state %>, <%= address.pincode %>, <%= address.country %><br>
                                        Phone: <%= address.phone %><br>
                                        <a href="#" class="link">Edit address</a> 
                                    </label>
                                </div>
                            <% }); %>
                            <button type="submit" class="btn primary">Use this address</button>
                        </form>
                        <a href="/user/address/new"><button class="btn">Add a new address</button></a>
                    </div>
                </div>
                
                <div class="accordion-item">
                    <button class="accordion-header">Review items and delivery</button>
                    <div class="accordion-content">
                        <h3 class="section-title">Arriving 27 Jul 2024</h3>
                        <p>If you order in the next 13 hours and 44 minutes (Details)</p>
                        <% orderDetails.forEach(function(item) { %>
                            <div class="product-item">
                                <img src="<%= item.imageUrl %>" alt="<%= item.title %>" style="width:100px; height:auto;"> <!-- Display the image -->
                                <h4 class="item-title">Items dispatched by <%= item.brand %></h4> <!-- Assuming brand is available -->
                                <p class="item-details">
                                    <%= item.title %> | Blue | 26<br>
                                    MRP: ₹<%= item.mrp.toFixed(2) %><br>
                                    Selling Price: ₹<%= item.price.toFixed(2) %><br>
                                    Qty: <%= item.quantity %><br>
                                    Subtotal: ₹<%= item.subtotal.toFixed(2) %><br>
                                    Savings: ₹<%= item.savings.toFixed(2) %>
                                </p>
                            </div>
                        <% }); %>
                        <p>Choose a delivery option:</p>
                        <p>Saturday 27 Jul<br>FREE Standard Delivery</p>
                        <button class="btn primary">Place your order</button>
                        <p class="terms">By placing your order, you agree to Amazon's privacy notice and conditions of use.</p>
                    </div>
                </div>
                
                <div class="accordion-item">
                    <button class="accordion-header">Payment Method</button>
                    <div class="accordion-content">
                        <h3 class="section-title">Your available balance</h3>
                        <input type="text" class="input-code" placeholder="Enter Code">
                        <button class="btn">Apply</button>
                        <h3 class="section-title">Another payment method</h3>
                        <p><input type="radio" name="payment" value="card" class="payment-option"> Credit or debit card</p>
                        <p><input type="radio" name="payment" value="netbanking" class="payment-option"> Net Banking</p>
                        <p><input type="radio" name="payment" value="upi" class="payment-option"> Other UPI Apps</p>
                        <p><input type="radio" name="payment" value="cod" class="payment-option"> Cash on Delivery/Pay on Delivery</p>
                        <button class="btn primary">Use this payment method</button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="checkout-right">
            <h2 class="order-summary-title">Order Summary</h2>
            <p class="order-summary-item">Items Total: ₹<%= totalCost.toFixed(2) %></p>
            <p class="order-summary-item">Delivery: ₹0.00</p>
            <h3 class="order-total">Order Total: ₹<%= totalCost.toFixed(2) %></h3>
            <p class="savings">Your Savings: ₹<%= totalSavings.toFixed(2) %> (69%)</p> <!-- Update the percentage calculation if needed -->
            <p class="discount">Item discount</p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const accordionHeaders = document.querySelectorAll(".accordion-header");
        
            accordionHeaders.forEach(header => {
                header.addEventListener("click", function() {
                    const currentlyActiveHeader = document.querySelector(".accordion-header.active");
                    if (currentlyActiveHeader && currentlyActiveHeader !== header) {
                        currentlyActiveHeader.classList.remove("active");
                        currentlyActiveHeader.nextElementSibling.classList.remove("show");
                    }
        
                    header.classList.toggle("active");
                    header.nextElementSibling.classList.toggle("show");
                });
            });
        });
    </script>

