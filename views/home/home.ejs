<% layout('layouts/boilerplate') %>
<style>
  .home-product-card-heading h2{
    margin: 0;
    margin-bottom: 1rem;
  }
  .banner {
    width: 100%;
    height: 300px; /* Adjust height as needed */
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f0f0f0; /* Fallback color */
    margin: 2rem 0;
}

.banner img {
    height: 100%;
    width: 100%;
}




.grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(175px, 1fr));
      gap: 20px;
      padding: 20px;
      background-color: white;
    }

    .grid-card-show {
      position: relative;
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
     border:1px solid #f0f0f0;
      transition: transform 0.3s, box-shadow 0.3s;
      cursor: pointer;
    }

    

    .grid-card-show img {
      width: 100%;
      height: 160px; /* Fixed height for images */
      object-fit: contain; 
      margin-top: 0.5rem;
      
    }

    .grid-card-info {
      text-align: center;
    }

    .grid-product-name {
      font-size: 16px;
      margin: 4px 0;
      color: #0000007c;
      overflow: hidden; /* Ensure text does not overflow */
    }

    .grid-card-price {
      font-size: 16px;
      color: #000000;
      margin: 5px 0;
    }

    .grid-card-rating {
    position: absolute;
    bottom: 60px;
    left: 5px;
    background: rgb(0, 140, 0);
    color: #fff;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 14px;
    font-weight: bold;
}

    .grid-card-sale {
      position: absolute;
      top: 10px;
      left: 5px;
      background: #00a094;
      color: #fff;
      padding: 4px;
      border-radius: 5px;
      font-size: 12px;
      font-weight: 600;
      overflow: hidden;
    }

    .grid-card-sale::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 200%;
      height: 100%;
      background: linear-gradient(120deg, rgba(255, 255, 255, 0) 30%, rgba(255, 255, 255, 0.5) 50%, rgba(255, 255, 255, 0) 70%);
      animation: shine 2s infinite;
    }

    @keyframes shine {
      0% {
        left: -100%;
      }
      100% {
        left: 100%;
      }
    }

    .grid-card-discount {
      font-size: 14px;
      color: #ff9800;
      margin: 5px 0;
    }
    @media (max-width: 500px) {
  .grid-container {
    grid-template-columns: repeat(3, 1fr);
    gap: 2px;
    background-color: #ebfbfa;
    padding: 5px;
  }
  .grid-card-show{
    margin-top: 0.2rem;
  }
  .product-section{
    margin-bottom: 0;
    padding: 5px;
  }
  .product-card{
    padding: 0;
  }
  .grid-card-price,.grid-product-name{
    font-size: 12px;
    margin: 0;
    padding-bottom: 0.2rem;
  }
}
.product-home-review{
  position: absolute;
    bottom: 60px;
    left: 5px;
    background: #388e3c;
    color: #fff;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 14px;
    font-weight: bold;
}





.home-sale-banner {
  padding: 2rem 0;
}

.home-sale-container {
  display: grid;
  max-width: 100%;
 
}

.grid-three-columns {
  grid-template-columns: repeat(3, 1fr);
}

.banner-item {
  background-color: #fff;
  overflow: hidden;
  position: relative;
}

.grid-two-columns {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  padding: 0.5rem;
}

.sale-heading {
  color: #6c63ff;
  font-size: 1rem;
  text-transform: uppercase;
  margin-bottom: 0.5rem;
}

.banner-text a {
  color: #000;
  text-decoration: none;
  font-weight: bold;
  border-bottom: 2px solid #000;
}

.banner-item::after {
    content: "";
    position: absolute;
    right: 0;
    bottom: 0;
    width: 10rem;
    height: 10rem;
    border-radius: 100% 0% 0% 100% / 100% 0% 100% 0%;
    background-color: #e3eaf0;
    z-index: 0;
}

.banner-image img {
  width: 100%;
  height: auto;
}

.banner-image {
  z-index: 1;
}

@media (max-width: 800px) {
  .grid-three-columns {
    grid-template-columns: 1fr;
  }

  .banner-image {
    text-align: center;
    margin-top: 0rem;
  }

  .banner-text p {
    margin-bottom: 0rem;
  }
}
.banner-text{
  margin-bottom: 5rem;
}
</style>

